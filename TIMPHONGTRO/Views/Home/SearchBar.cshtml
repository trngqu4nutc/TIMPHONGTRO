<div id="searchbar">
    <div id="searchformTop" class="searchform js-form-submit-data">
        <div class="search_field">
            <div id="myform">
                <div class="search_field_item search_field_item_loaitin">
                    <label class="search_field_item_label">Loại tin</label>
                    <select id="search_room_type"
                            class="form-control js_select2_room_type select2-hidden-accessible"
                            name="CategoryId"
                            tabindex="-1"
                            aria-hidden="true">
                    </select>
                </div>
                <div class="search_field_item search_field_item_tinhthanh">
                    <label class="search_field_item_label">Tỉnh thành</label>
                    <select id="search_city"
                            class="form-control tinh-tp js_select2_tinhthanh js-select-tinhthanhpho select2-hidden-accessible"
                            name="ProvincialId"
                            tabindex="-1"
                            aria-hidden="true">
                        <option value="1" selected="">
                            Hà Nội
                        </option>
                    </select>
                </div>
                <div class="search_field_item search_field_item_quanhuyen">
                    <label class="search_field_item_label">Quận huyện</label>
                    <select id="tblDataQuan" style="width: 175px;" class="form-control js_select2_quanhuyen js-select-quanhuyen select2-hidden-accessible"
                            name="DistrictId"
                            data-current=""
                            tabindex="-1"
                            aria-hidden="true">
                    </select>
                </div>
                <div class="search_field_item search_field_item_quanhuyen">
                    <label class="search_field_item_label">Đường phố</label>
                    <select id="tblDataDuong" style="width:205px;" class="form-control js_select2_quanhuyen js-select-quanhuyen select2-hidden-accessible"
                            name="StreetId"
                            data-current=""
                            tabindex="-1"
                            aria-hidden="true">
                        <option value="0">
                            Chọn đường phố
                        </option>

                    </select>
                </div>
                <div class="search_field_item search_field_item_mucgia">
                    <label class="search_field_item_label">Khoảng giá</label>
                    <select class="form-control choose-price js_select2_price select2-hidden-accessible"
                            name="Price"
                            tabindex="-1"
                            aria-hidden="true">
                        <option value="0" selected="">
                            Chọn mức giá
                        </option>
                        <option value="1">
                            Dưới 1 triệu
                        </option>
                        <option value="2">
                            1 triệu - 2 triệu
                        </option>
                        <option value="3">
                            2 triệu - 3 triệu
                        </option>
                        <option value="4">
                            3 triệu - 5 triệu
                        </option>
                        <option value="5">
                            5 triệu - 7 triệu
                        </option>
                        <option value="6">
                            7 triệu - 10 triệu
                        </option>
                        <option value="7">
                            Trên 10 triệu
                        </option>
                    </select>
                </div>
                <div class="search_field_item search_field_item_dientich">
                    <label class="search_field_item_label">Diện tích</label>
                    <select id="search_dientich"
                            name="Area"
                            class="form-control js_select2_acreage select2-hidden-accessible"
                            tabindex="-1"
                            aria-hidden="true">
                        <option value="0" selected="">
                            Chọn diện tích
                        </option>
                        <option value="1">
                            Dưới 20 m2
                        </option>
                        <option value="2">
                            20 m2 - 30 m2
                        </option>
                        <option value="3">
                            30 m2 - 50 m2
                        </option>
                        <option value="4">
                            50 - 60 m2
                        </option>
                        <option value="5">
                            60 - 70 m2
                        </option>
                        <option value="6">
                            70 - 80 m2
                        </option>
                        <option value="7">
                            80 - 90 m2
                        </option>
                        <option value="8">
                            90 - 100 m2
                        </option>
                        <option value="9">
                            Trên 100 m2
                        </option>
                    </select>
                </div>
                <div class="search_field_item search_field_item_submit">
                    <label class="search_field_item_label">&nbsp;</label>
                    <button id="btnLoc" type="button" class="btn btn-warning btn_search_box">
                        Lọc tin
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="data-template-quan" type="x-tmpl-mustache">
    <option value={{valquan}}>
        {{namequan}}
    </option>
</script>
<script id="data-template-duong" type="x-tmpl-mustache">
    <option value={{valduong}}>
        {{nameduong}}
    </option>
</script>
<script id="data-template-loai" type="x-tmpl-mustache">
    <option value={{valloai}} selected="">
        {{nameloai}}
    </option>
</script>

